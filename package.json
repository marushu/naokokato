{
  "name": "task-runner-for-linkx-theme",
  "version": "1.0.0",
  "description": "new task runner for hibou build themes :)",
  "scripts": {
    "scss": "node-sass --output-style expanded --indent-type tab --indent-width 2 -o ./ ./sass/style.scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' -r ./style.css",
    "lint": "eslint ./js",
    "imagemin": "imagemin ../../../../../dist/* -o ./images",
    "serve": "browser-sync --proxy 'naokokato-local-new.com' start --files './style.css, ./js/*.js, ./**/*'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:images",
    "watch:css": "onchange './sass/style.scss' -- npm run build:css",
    "watch:images": "onchange '../../../../../dist/*' -- npm run build:images",
    "watch:js": "onchange './js/*.js' -- npm run build:js",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js' 'npm run watch:images'",
    "postinstall": "npm run watch:all"
  },
  "author": "Hibou",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "browser-sync": "^2.18.13",
    "eslint": "^4.12.0",
    "imagemin": "^5.3.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.7.2",
    "npm": "^5.5.1",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^4.1.1",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.0.3",
    "uglify-js": "^3.2.0"
  },
  "dependencies": {
    "imagemin-pngquant": "^5.0.1"
  }
}
